<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".salesman.SalesmanRegistrationActivity">

        <ImageView
            android:id="@+id/f1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:background="@drawable/curve" >


        </ImageView>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:text="Add New Product"
            android:background="@drawable/round_corner_transp_yellow"
            android:shadowRadius="2"
            android:shadowDy="3"
            android:shadowDx="3"
            android:shadowColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_22sdp"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/f1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/marginplus8">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/product_namee"
                android:paddingLeft="@dimen/_3sdp"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/et_nameProduct_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:autofillHints=""
                android:fontFamily="@font/poppins_light"
                android:inputType="text"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                tools:ignore="LabelFor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginplus3"
                android:text="@string/product_id"
                android:paddingLeft="@dimen/_3sdp"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/et_Product_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:autofillHints=""
                android:fontFamily="@font/poppins_light"
                android:inputType="numberDecimal"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                tools:ignore="LabelFor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginplus3"
                android:text="@string/product_price"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/et_price_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:autofillHints=""
                android:fontFamily="@font/poppins_light"
                android:inputType="numberDecimal"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                tools:ignore="LabelFor" />


            <Button
                android:id="@+id/btn_save_Product_id"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_35sdp"
                android:background="@drawable/seleter2"
                android:text="Save Product"
                android:textColor="#ffffff"
                android:textSize="@dimen/_14sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                 />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>