<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginplus4"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/marginplus4"
        android:backgroundTint="@color/bg_item"
        android:layout_marginBottom="@dimen/marginplus3"
        android:elevation="@dimen/marginplus1"
        android:orientation="horizontal"
        app:cardCornerRadius="@dimen/marginplus1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/item_viewDetail_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/btn_delete_id"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/marginplus2"
                    android:gravity="center_vertical"
                    android:layout_toLeftOf="@+id/view_detail_id"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/marginplus3"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_light"
                        android:text="Order No"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />


                    <TextView
                        android:id="@+id/tvSalesmanName_id"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/poppins_light"
                        android:text="@string/salesman_name"
                        android:textColor="@color/text"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:id="@+id/tvCutomerName_id"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/poppins_light"
                        android:text="@string/customer_name"
                        android:textColor="@color/text"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="RtlHardcoded" />


                </LinearLayout>



            </RelativeLayout>

            <ImageButton
                android:id="@+id/btn_delete_id"
                android:layout_width="@dimen/_37sdp"
                android:layout_height="@dimen/_37sdp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_toLeftOf="@id/btnget_location_id"
                android:background="@drawable/ic_delete" />
           <ImageButton
                android:id="@+id/btnget_location_id"
                android:layout_width="@dimen/_37sdp"
                android:layout_height="@dimen/_37sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/sharelocation" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>