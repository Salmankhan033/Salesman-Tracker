<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/trackit_bg"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:id="@+id/s1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/marginplus2"
        android:text="Order Detail"
        android:gravity="center"
        android:shadowRadius="2"
        android:shadowDy="3"
        android:shadowDx="3"
        android:shadowColor="@color/black"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:background="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp"
        />


    <ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lay_location_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_14sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:text="Track Loaction on Map"/>

            <ImageButton
                android:id="@+id/btnget_location_id"
                android:layout_width="@dimen/_39sdp"
                android:layout_height="@dimen/_39sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_alignParentTop="true"
                android:background="@drawable/sharelocation" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_location_id"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Date/Time"
                android:paddingLeft="@dimen/_3sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />


            <EditText
                android:id="@+id/et_DateTime_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:enabled="false"
                android:inputType="text"
                android:gravity="center"
                android:paddingLeft="@dimen/_5sdp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                tools:ignore="LabelFor" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order ID"
                android:textColor="@color/black"
                android:paddingLeft="@dimen/_3sdp"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/et_order_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:autofillHints=""
                android:fontFamily="@font/poppins_light"
                android:inputType="text"
                android:enabled="false"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:text="1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                tools:ignore="LabelFor" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salesman ID"
                android:textColor="@color/black"

                android:paddingLeft="@dimen/_3sdp"
                android:layout_marginTop="@dimen/marginplus1"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/et_Salesman_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:autofillHints=""
                android:fontFamily="@font/poppins_light"
                android:inputType="text"
                android:enabled="false"
                android:paddingLeft="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:maxLength="13"
                android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                tools:ignore="LabelFor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salesman Name"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/marginplus1"
                android:paddingLeft="@dimen/_3sdp"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/et_SalesmanName_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:autofillHints=""
                android:fontFamily="@font/poppins_light"
                android:inputType="text"
                android:enabled="false"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:paddingLeft="@dimen/_10sdp"
                android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                tools:ignore="LabelFor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer ID"
                android:paddingLeft="@dimen/_3sdp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/marginplus1"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/et_Customer_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:autofillHints=""
                android:maxLength="13"
                android:fontFamily="@font/poppins_light"
                android:inputType="text"
                android:enabled="false"
                android:paddingLeft="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                tools:ignore="LabelFor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/marginplus1"
                android:paddingLeft="@dimen/_3sdp"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/et_CustomerName_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:autofillHints=""
                android:fontFamily="@font/poppins_light"
                android:inputType="text"
                android:enabled="false"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:paddingLeft="@dimen/_10sdp"
                android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                tools:ignore="LabelFor" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginplus1"
                android:textColor="@color/black"
                android:text=" Mobile"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/et_mob_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:autofillHints=""
                android:fontFamily="@font/poppins_light"
                android:inputType="number"
                android:maxLength="11"
                android:enabled="false"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:paddingLeft="@dimen/_10sdp"
                android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                tools:ignore="LabelFor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginplus1"
                android:text="Product"
                android:textColor="@color/black"
                android:paddingLeft="@dimen/_3sdp"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_37sdp"
                android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_Product_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/marginplus1"
                    android:inputType="textMultiLine"
                    android:enabled="false"
                    android:theme="@style/MatchSpinnerTheme"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/marginplus1" />


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginplus1"
                android:text="Quantity"
                android:textColor="@color/black"
                android:paddingLeft="@dimen/_3sdp"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/et_Quantity_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:autofillHints=""
                android:fontFamily="@font/poppins_light"
                android:inputType="text"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:paddingLeft="@dimen/_10sdp"
                android:enabled="false"
                android:gravity="center_vertical"
                android:maxLength="13"
                android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                tools:ignore="LabelFor" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginplus1"
                android:text="Working Area"
                android:textColor="@color/black"
                android:paddingLeft="@dimen/_3sdp"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_37sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_Area_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/marginplus1"
                    android:inputType="textMultiLine"
                    android:enabled="false"
                    android:theme="@style/MatchSpinnerTheme"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/marginplus1" />


            </LinearLayout>


<!--            <Button-->
<!--                android:id="@+id/btn_PlaceOrder_id"-->
<!--                android:layout_width="@dimen/_180sdp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_marginTop="@dimen/_25sdp"-->
<!--                android:background="@drawable/seleter2"-->
<!--                android:text="Submit"-->
<!--                android:textColor="#ffffff"-->
<!--                android:textSize="@dimen/_14sdp"-->
<!--                android:layout_marginBottom="@dimen/_10sdp"-->
<!--                />-->
        </LinearLayout>
    </RelativeLayout>
</ScrollView>

</LinearLayout>